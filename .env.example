# environment variables for neendai web app
# copy to .env.local for local development

# api url - where the python backend is running
NEXT_PUBLIC_API_URL=http://localhost:8000

# for vercel deployment, set these in vercel dashboard
# NEXT_PUBLIC_API_URL=https://your-api.vercel.app

# jwt secret for auth (generate a random string)
JWT_SECRET=change-this-to-a-real-secret-in-production

# optional: analytics
# NEXT_PUBLIC_ANALYTICS_ID=

# optional: database url for production
# DATABASE_URL=postgresql://...

# optional: redis for sessions
# REDIS_URL=redis://...
